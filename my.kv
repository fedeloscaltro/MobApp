#to catch the right class
<MyGrid>

    #access the values
    name: nameId
    email: emailId

    GridLayout:
        cols:1
        # to set the width to the whole window
        size: root.width - 200, root.height - 200
        pos: 100, 100

        GridLayout:
            cols:2

            Label:
                text: "Hello"

            TextInput:
                id: nameId
                multiline: False

            Label:
                text: "Email: "

            TextInput:
                id: emailId
                multiline:False

        Button:
            text: "Submit"
            #the root is MyGrid
            on_press: root.btn()